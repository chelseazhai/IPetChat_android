<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/popupwindow_mask_transparent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/img_popupwindow_contentview_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="14dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="10dp" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="请选择图片来源"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="14dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <Button
                android:id="@+id/talkPhoto_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/popupwindow_common_btn_bg"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="拍照"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@drawable/component_normal7pressed_textcolor"
                android:textStyle="bold" />

            <Button
                android:id="@+id/selectPhoto_fromAlbum_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/popupwindow_common_btn_bg"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="从手机相册选择"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@drawable/component_normal7pressed_textcolor"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/selectCancel_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/popupwindow_cancel_btn_bg"
            android:text="取消"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>