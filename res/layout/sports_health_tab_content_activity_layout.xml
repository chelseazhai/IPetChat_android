<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_light_gray"
    tools:context=".tab7tabcontent.SportsHealthTabContentActivity" >

    <ImageView
        android:id="@+id/demo_imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription=""
        android:src="@drawable/img_demo_sportshealth_today" />

    <Button
        android:id="@+id/today_button"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/histody_button"
        android:layout_alignBottom="@+id/histody_button"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="41dp"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/histody_button"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="115dp"
        android:layout_toRightOf="@+id/today_button"
        android:background="@android:color/transparent" />

</RelativeLayout>