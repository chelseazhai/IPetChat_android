<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_light_light_gray"
    android:orientation="vertical"
    tools:context=".account.AccountSetting4FirstActivity" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/application_launch_imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:contentDescription="@string/application_launch_imageview_contentdescription"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <Button
            android:id="@+id/account_register_button"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/plane_gainsboro_btn_bg"
            android:text="@string/account_register_button_title"
            android:textColor="@color/middle_green"
            android:textSize="22sp" />

        <Button
            android:id="@+id/account_login_button"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/account_register_button"
            android:layout_marginTop="14dp"
            android:background="@drawable/plane_green_btn_bg"
            android:text="@string/account_login_button_title"
            android:textColor="@android:color/white"
            android:textSize="22sp" />
    </RelativeLayout>

</LinearLayout>