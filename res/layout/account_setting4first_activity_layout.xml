<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_light_light_gray"
    android:orientation="vertical"
    tools:context=".account.AccountSetting4FirstActivity" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:contentDescription="@string/as4f_appIcon_imageView_contentDescription"
            android:scaleType="centerCrop"
            android:src="@drawable/img_application_icon" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <Button
            android:id="@+id/as4f_accountRegister_button"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/plane_gainsboro_btn_bg"
            android:text="@string/as4f_accountRegister_button_title"
            android:textColor="@color/middle_green"
            android:textSize="22sp" />

        <Button
            android:id="@+id/as4f_accountLogin_button"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/as4f_accountRegister_button"
            android:layout_marginTop="14dp"
            android:background="@drawable/plane_green_btn_bg"
            android:text="@string/as4f_accountLogin_button_title"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/as4f_accountLogin_button"
            android:layout_marginTop="20dp" >

            <Button
                android:id="@+id/as4f_sinaWeiboOAuthLogin_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/sina_weibo_oauth_login_btn_bg" />

            <Button
                android:id="@+id/as4f_qqConnectOAuthLogin_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/qq_connect_oauth_login_btn_bg" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>