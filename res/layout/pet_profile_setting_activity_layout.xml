<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.PetProfileSettingActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@android:layout/simple_list_item_single_choice" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@android:layout/simple_list_item_checked" />

            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@android:layout/simple_list_item_checked" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@android:layout/simple_list_item_single_choice" />

            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@android:layout/simple_list_item_single_choice" />

            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@android:layout/simple_list_item_single_choice" />

            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@android:layout/simple_list_item_single_choice" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@android:layout/simple_list_item_multiple_choice" />

            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@android:layout/simple_list_item_multiple_choice" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>