<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".settings.photo.UploadPetPhotoActivity" >

    <EditText
        android:id="@+id/pet_photoAlbum_description_editText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/common_edittext_bg"
        android:enabled="false"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pet_photoAlbum_description_editText"
        android:layout_marginTop="16dp"
        android:background="@drawable/upload_pet_photo_bg"
        android:orientation="vertical"
        android:padding="20dp" >

        <ImageView
            android:id="@+id/upload_pet_photo_imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <EditText
            android:id="@+id/upload_pet_photo_description_editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/common_edittext_bg"
            android:hint="这一刻的想法" >

            <requestFocus />
        </EditText>
    </LinearLayout>

</RelativeLayout>