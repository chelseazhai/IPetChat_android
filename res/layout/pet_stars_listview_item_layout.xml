<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pet_community_listview_item_round_bg"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <FrameLayout
        android:id="@+id/petStar_avatar_parentFrameLayout"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/avatar_container_bg" >

        <ImageView
            android:id="@+id/petStar_avatar_imageView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:contentDescription="@string/petstar_avatar_imageview_contentdescription"
            android:scaleType="centerInside" />
    </FrameLayout>

    <TextView
        android:id="@+id/petStar_recommendation_textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="6dp"
        android:layout_toRightOf="@id/petStar_avatar_parentFrameLayout"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/petStar_detail_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:fontFamily=""
        android:gravity="center_horizontal|bottom"
        android:text="@string/petstar_detail_button_title"
        android:textColor="@drawable/pet_star_detail_btn_textcolor"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>