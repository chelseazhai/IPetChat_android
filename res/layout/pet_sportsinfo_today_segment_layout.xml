<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/pet_today_sportsInfo_relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:background="@drawable/pet_sportsinfo_chart_parentlayout_bg"
        android:padding="4dp" >

        <RelativeLayout
            android:id="@+id/pet_sportsScore_relativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:paddingBottom="7dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="7dp" >

            <TextView
                android:id="@+id/pet_sportsScore_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/pet_sportsScore_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/pet_sportsScore_textView"
                android:max="100"
                android:progressDrawable="@drawable/pet_sports_score_progressbar_gray_layer" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/pet_sportsScore_relativeLayout"
            android:layout_margin="8dp"
            android:baselineAligned="false" >

            <FrameLayout
                android:id="@+id/pet_today_sportsInfo_pieChart_frameLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="7" >
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="13"
                android:background="@android:color/transparent" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="6dp"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/pet_today_rest_sportsInfo_value_textView"
                            android:layout_width="34dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/pet_rest_sportsinfo_value_textview_bg"
                            android:gravity="center"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="6dp"
                            android:layout_toRightOf="@id/pet_today_rest_sportsInfo_value_textView"
                            android:text="@string/pet_sportsinfo_rest_tip"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/pet_today_walk_sportsInfo_value_textView"
                            android:layout_width="34dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/pet_walk_sportsinfo_value_textview_bg"
                            android:gravity="center"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="6dp"
                            android:layout_toRightOf="@id/pet_today_walk_sportsInfo_value_textView"
                            android:text="@string/pet_sportsinfo_walk_tip"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/pet_today_run_sportsInfo_value_textView"
                            android:layout_width="34dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/pet_run_sportsinfo_value_textview_bg"
                            android:gravity="center"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="6dp"
                            android:layout_toRightOf="@id/pet_today_run_sportsInfo_value_textView"
                            android:text="@string/pet_sportsinfo_run_tip"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/pet_today_strenuousExercise_sportsInfo_value_textView"
                            android:layout_width="34dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/pet_strenuousexercise_sportsinfo_value_textview_bg"
                            android:gravity="center"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="6dp"
                            android:layout_toRightOf="@id/pet_today_strenuousExercise_sportsInfo_value_textView"
                            android:text="@string/pet_sportsinfo_strenuousExercise_tip"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/pet_today_healthDietRecommendation_textView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="16"
        android:background="@drawable/pet_today_healthdietrecommendation_textview_bg"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:lines="2"
        android:paddingTop="3dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="invisible" />

</LinearLayout>